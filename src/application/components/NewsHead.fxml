<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitMenuButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Font?>
<?import com.jfoenix.controls.JFXButton?>

<fx:root xmlns:fx="http://javafx.com/fxml/1" type="HBox" prefWidth="900.0"
	prefHeight="100.0">
	<children>
		<ImageView fx:id="headImage" fitHeight="100.0"
			fitWidth="200.0" pickOnBounds="true" preserveRatio="true" onMouseClicked="#openMainView">
			<image>
				<Image url="@/eit-logo.png" />
			</image>
		</ImageView>
		<Label fx:id="headline" maxHeight="1.7976931348623157E308"
			maxWidth="336.0" minWidth="336.0" prefHeight="100.0"
			prefWidth="336.0" text="Label" textFill="#444444" wrapText="true">
			<padding>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			</padding>
			<font>
				<Font size="20.0" />
			</font>
		</Label>
		<HBox alignment="CENTER_RIGHT" nodeOrientation="LEFT_TO_RIGHT"
			prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
			<children>
				<SplitMenuButton fx:id="btnAdd"
					mnemonicParsing="false" onAction="#openEditor"
					text="New" textFill="WHITE">
					<items>
						<MenuItem fx:id="btnLoadNewsFile" mnemonicParsing="false"
							onAction="#loadNewsFile" text="Load from file" />
					</items>
					<font>
						<Font size="16.0" />
					</font>
				</SplitMenuButton>
				<MenuButton fx:id="btnUser" mnemonicParsing="false"
					style="-fx-background-color: #7a92ff; -fx-mark-color: #ffffff;"
					text="Username" textFill="WHITE" visible="false">
					<items>
						<MenuItem mnemonicParsing="false" onAction="#logout"
							text="Logout" />
					</items>
					<font>
						<Font size="16.0" />
					</font>
					<HBox.margin>
						<Insets left="20.0" right="20.0" />
					</HBox.margin>
				</MenuButton>
				<JFXButton fx:id="btnLogin" mnemonicParsing="false"
					onAction="#openLogin" prefHeight="38.0" prefWidth="80.0"
					text="Login" textFill="WHITE">
					<font>
						<Font size="16.0" />
					</font>
					<HBox.margin>
						<Insets left="20.0" right="20.0" />
					</HBox.margin>
				</JFXButton>
			</children>
		</HBox>
	</children>
</fx:root>

